<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:background="@drawable/outline_background"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/home_card_root"
        android:orientation="vertical"
        android:scaleX="0.9"
        android:scaleY="0.9"
>
    <!-- card gets scaled to 1.0 during runtime in CardAdapter -->

    <androidx.cardview.widget.CardView
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:elevation="10dp"
            app:cardCornerRadius="6dp"
            app:cardBackgroundColor="@color/darkBar"

    >
        <ImageView
                android:duplicateParentState="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:layout_width="127dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:id="@+id/imageView"
        >
        </ImageView>
        <ImageView
                android:scaleType="centerInside"
                android:layout_width="127dp"
                android:layout_height="200dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:src="@drawable/nexflix_play_btt"
                android:contentDescription="@string/continue_watching_play_episode_button">
        </ImageView>
        <RelativeLayout
                android:layout_width="127dp"
                android:layout_height="200dp"
                android:gravity="bottom"
        >

            <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/video_progress"
                    android:layout_width="127dp"
                    android:indeterminate="false"
                    style="@android:style/Widget.Material.ProgressBar.Horizontal"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/imageText"
                    android:layout_marginBottom="-6dp"
            >
            </androidx.core.widget.ContentLoadingProgressBar>
            <TextView
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/white"
                    android:id="@+id/imageText"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:background="@color/darkBarTransparent"
                    android:layout_alignParentBottom="true"
            />
        </RelativeLayout>
        <!-- giant padding for bigger hitboxes -->
        <ImageView
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:id="@+id/infoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingEnd="15dp"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:src="@drawable/ic_outline_info_24"
                android:layout_gravity="top|start"
                android:contentDescription="@string/continue_watching_info_button"/>

        <ImageView
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:id="@+id/removeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="5dp"
                android:paddingTop="5dp"
                android:src="@drawable/ic_baseline_clear_24"
                android:layout_gravity="end|top"
                android:contentDescription="@string/continue_watching_remove_button"
        />
    </androidx.cardview.widget.CardView>
</LinearLayout>
