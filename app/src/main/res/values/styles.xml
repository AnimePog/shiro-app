<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/opensans_regular</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:navigationBarColor">?attr/darkBar</item>
        <!--<item name="android:statusBarColor">@color/transparent</item>-->
        <item name="android:statusBarColor">?attr/darkBar</item>
        <item name="tabBackground">?attr/darkBar</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textColorHint">?attr/textColor</item>
        <item name="mediaRouteButtonTint">?attr/white</item>
        <item name="android:textColorSecondary">?attr/textColorGray</item>
        <item name="android:scrollbarThumbHorizontal">@color/transparent</item>
        <item name="android:scrollbarThumbVertical">@color/transparent</item>
        <item name="colorSurface">?attr/darkBar</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorAccent</item>

        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimaryMegaDark">@color/colorPrimaryMegaDark</item>
        <item name="colorPrimaryDarker">@color/colorPrimaryDarker</item>
        <!-- <item name="android:windowBackground">?attr/darkBar</item>-->
        <item name="castExpandedControllerStyle">
            @style/CustomCastExpandedController
        </item>
        <item name="castMiniControllerStyle">@style/CustomCastMiniController</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>

        <!-- default theme -->
        <item name="darkBar">@color/darkBar</item>
        <item name="darkBarLight">@color/darkBarLight</item>
        <item name="darkBarTransparent">@color/darkBarTransparent</item>
        <item name="backgroundLight">@color/backgroundLight</item>
        <item name="background">@color/background</item>
        <item name="white">@android:color/white</item>
        <item name="textColor">@color/textColor</item>
        <item name="textColorGray">@color/textColorGray</item>
        <item name="textColorGrayWhite">@color/textColorGrayWhite</item>
        <item name="video_ripple">@color/video_ripple</item>
        <!-- prefrencescreen switch color -->
        <item name="android:colorForeground">?attr/white</item>
        <item name="android:colorControlHighlight">?attr/white</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="materialThemeOverlay">@style/NavigationView</item>
    </style>

    <style name="NavigationView" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">?attr/textColor</item>
        <!--<item name="android:background">?attr/background</item>-->
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textColorPrimary">?attr/textColor</item>
        <item name="android:background">?attr/background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:colorBackground">?attr/background</item>
        <item name="textColorAlertDialogListItem">?attr/textColor</item>
        <item name="colorControlNormal">?attr/textColor</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
    </style>

    <style name="Theme.LeanbackCustom" parent="Theme.Leanback">
        <item name="playbackProgressPrimaryColor">?attr/colorPrimary</item>
        <item name="playbackControlsIconHighlightColor">?attr/colorPrimary</item>
        <item name="defaultBrandColor">?attr/colorPrimary</item>
        <item name="defaultBrandColorDark">?attr/colorPrimaryDark</item>
    </style>

    <style name="DialogButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">50dp</item>
        <item name="android:paddingEnd">50dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OverlayPrimaryColorBlue">
        <item name="colorPrimaryMegaDark">#121840</item>
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorPrimaryDarker">#212C70</item>
        <item name="colorAccent">#007dfe</item>
        <item name="colorOnPrimary">#007dfe</item>
    </style>

    <style name="LightMode">
        <item name="darkBar">@color/lightDarkBar</item>
        <item name="darkBarLight">@color/lightDarkBarLight</item>
        <item name="darkBarTransparent">@color/lightDarkBarTransparent</item>
        <item name="backgroundLight">@color/lightBackgroundLight</item>
        <item name="background">@color/lightBackground</item>
        <item name="white">@android:color/black</item>
        <item name="textColor">@color/lightTextColor</item>
        <item name="textColorGray">@color/lightTextColorGray</item>
        <item name="textColorGrayWhite">@color/lightTextColorGrayWhite</item>
        <item name="video_ripple">@color/lightVideo_ripple</item>
    </style>

    <style name="DarkMode">
        <item name="darkBar">@color/darkDarkBar</item>
        <item name="darkBarLight">@color/darkDarkBarLight</item>
        <item name="darkBarTransparent">@color/darkDarkBarTransparent</item>
        <item name="backgroundLight">@color/darkBackgroundLight</item>
        <item name="background">@color/darkBackground</item>
        <item name="white">@android:color/white</item>
        <item name="textColor">@color/textColor</item>
        <item name="textColorGray">@color/textColorGray</item>
        <item name="textColorGrayWhite">@color/textColorGrayWhite</item>
    </style>

    <style name="CustomCastExpandedController" parent="CastExpandedController">
        <item name="castControlButtons">
            @array/cast_expanded_controller_control_buttons
        </item>
        <item name="castButtonColor">@null</item>
        <item name="castSeekBarProgressAndThumbColor">@color/white</item>
        <item name="castSeekBarSecondaryProgressColor">?attr/darkBar</item>
        <item name="castBackground">?attr/colorPrimary</item>
        <item name="castProgressBarColor">?attr/colorPrimary</item>
        <item name="castPlayButtonDrawable">@drawable/netflix_play</item>
        <item name="castPauseButtonDrawable">@drawable/netflix_pause</item>
        <item name="castStopButtonDrawable">@drawable/cast_ic_expanded_controller_stop</item>
        <item name="castSkipPreviousButtonDrawable">@drawable/cast_ic_expanded_controller_skip_previous</item>
        <item name="castSkipNextButtonDrawable">@drawable/cast_ic_expanded_controller_skip_next</item>
        <item name="castRewind30ButtonDrawable">@drawable/go_back_30</item>
        <item name="castForward30ButtonDrawable">@drawable/go_forward_30</item>
    </style>
    <style name="CustomCastMiniController" parent="CastMiniController">
        <item name="castMiniControllerLoadingIndicatorColor">?attr/colorPrimary</item>
        <item name="castShowImageThumbnail">true</item>
        <item name="castTitleTextAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="castSubtitleTextAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="castBackground">?attr/darkBar</item>
        <item name="castProgressBarColor">?attr/colorPrimary</item>
        <item name="castStopButtonDrawable">@drawable/cast_ic_mini_controller_stop</item>'
        <item name="castLargeStopButtonDrawable">@drawable/cast_ic_mini_controller_stop_large</item>
        <item name="castSkipPreviousButtonDrawable">@drawable/cast_ic_mini_controller_skip_prev</item>
        <item name="castSkipNextButtonDrawable">@drawable/cast_ic_mini_controller_skip_next</item>
        <item name="castRewind30ButtonDrawable">@drawable/go_back_30</item>
        <item name="castForward30ButtonDrawable">@drawable/go_forward_30</item>
        <item name="castMuteToggleButtonDrawable">@drawable/cast_ic_mini_controller_mute</item>
        <item name="castClosedCaptionsButtonDrawable">@drawable/cast_ic_mini_controller_closed_caption</item>
    </style>

    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@android:color/white</item>
    </style>

    <style name="CustomProgressBarTheme">
        <item name="colorAccent">@color/white</item>
        <item name="android:progressBarStyle">@style/Widget.AppCompat.ProgressBar.Horizontal</item>
    </style>

</resources>